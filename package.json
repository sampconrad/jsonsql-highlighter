{
  "name": "jsonsql-highlighter",
  "displayName": "SQL Highlighter for JSON",
  "description": "A VS Code extension that provides syntax highlighting for SQL queries embedded in JSON files.",
  "version": "1.2.0",
  "author": "sampconrad <https://github.com/sampconrad>",
  "homepage": "https://github.com/sampconrad",
  "publisher": "sampconrad",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/sampconrad/jsonsql-highlighter.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sql-in-json",
        "aliases": ["SQL in JSON", "sql-json"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sql-in-json",
        "scopeName": "source.sql-in-json",
        "path": "./syntaxes/sql-in-json.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "jsonsql-highlighter.formatSQL",
        "title": "SQL Highlighter for JSON - Formatter",
        "category": "SQL Highlighter"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "jsonsql-highlighter.formatSQL",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "sql-formatter": "^15.3.2"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4",
    "@vscode/vsce": "^2.19.0"
  }
}
